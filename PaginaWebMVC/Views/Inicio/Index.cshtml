<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <script src="https://kit.fontawesome.com/003dd04503.js" crossorigin="anonymous"></script>
    <link href="~/Content/css/menu.css" rel="stylesheet" />
    <link href="~/Content/css/resumen.css" rel="stylesheet" />

</head>
<body>
    <header>
        <label class="fa-solid fa-bars"></label>
    </header>

    <main>
        <nav class="nav">
            <ul class="list">
                <li class="list__item list__item--click">
                    <div class="list__buttom list__buttom--click">
                        <i class="fa-solid fa-user-group"></i>
                        <a href="#" class="nav__link">Personal</a>
                        <i class="fa-solid fa-angles-right list__arrow"></i>
                    </div>
                    <ul class="list__show">
                        <li class="list_inside">
                            <a href="#" class="nav__link nav__link--inside">Empleados</a>
                        </li>
                        <li class="list_inside">
                            <a href="#" class="nav__link nav__link--inside">Cargos</a>
                        </li>
                    </ul>
                </li>

                <li class="list__item">
                    <div class="list__buttom">
                        <i class="fa-solid fa-cart-shopping"></i>
                        <a href="#" class="nav__link"> Compras</a>
                    </div>
                </li>

                <li class="list__item">
                    <div class="list__buttom">
                        <i class="fa-solid fa-cubes"></i>
                        <a href="#" class="nav__link"> Recursos</a>
                    </div>
                </li>

                <li class="list__item list__item--click">
                    <div class="list__buttom list__buttom--click">
                        <i class="fa-solid fa-address-book"></i>
                        <a href="#" class="nav__link"> Contactos </a>
                        <i class="fa-solid fa-angles-right list__arrow"></i>
                    </div>
                    <ul class="list__show">
                        <li class="list_inside">
                            <a href="#" class="nav__link nav__link--inside">Clientes</a>
                        </li>
                        <li class="list_inside">
                            <a href="#" class="nav__link nav__link--inside">Proveedores</a>
                        </li>
                    </ul>
                </li>

                <li class="list__item">
                    <div class="list__buttom">
                        <i class="fa-solid fa-clipboard-list"></i>
                        <a href="#" class="nav__link"> Proyectos</a>
                    </div>
                </li>

                <li class="list__item">
                    <div class="list__buttom">
                        <i class="fa-solid fa-hand-holding-dollar"></i>
                        <a href="#" class="nav__link"> Servicios</a>
                    </div>
                </li>
            </ul>
        </nav>

        <div class="principal">
            @{ Html.RenderPartial("_Resumen");}
        </div>
    </main>

    <footer class="pie">
        <div>
            <h1>GRUPO 5</h1>
        </div>
    </footer>

    <script src="~/Scripts/js/menujs.js"></script>
</body>
</html>
